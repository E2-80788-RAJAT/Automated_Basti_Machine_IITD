/* USER CODE BEGIN PM */
#define TTP229_SCL_PIN GPIO_PIN_10
#define TTP229_SCL_PORT GPIOB
#define TTP229_SDO_PIN GPIO_PIN_11
#define TTP229_SCL_PORT GPIOB

/* USER CODE END PM */

/* Private variables ---------------------------------------------------------*/
I2C_HandleTypeDef hi2c1;

/* USER CODE BEGIN PV */

/* USER CODE END PV */

