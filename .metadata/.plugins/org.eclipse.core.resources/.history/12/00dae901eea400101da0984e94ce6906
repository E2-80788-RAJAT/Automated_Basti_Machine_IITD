/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
const uint16_t TTP229_KEYS[16] = {
		0x0001, 0x0002, 0x0004, 0x0008,
		0x0010, 0x0020, 0x0040, 0x0080,
		0x0100, 0x0200, 0x0400, 0x0800,
		0x1000, 0x2000, 0x4000, 0x8000
};

const char* KEY_LABELS[16] = {
		"1", "2", "3", "A",
		"4", "5", "6", "B",
		"7", "8", "9", "C",
		"*", "0", "#", "D"
};

void TTP229_Delay(void){
	volatile uint32_t delay = 10;
	while(delay--);
}

void TTP229_Start(void){
	HAL_GPIO_WritePin(TTP229_SCL_PORT, TTP229_SCL_PIN, GPIO_PIN_RESET);
	TTP229_Delay();
	HAL_GPIO_WritePin(TTP229_SCL_PORT, TTP229_SCL_PIN, GPIO_PIN_SET);
	TTP229_Delay();
	HAL_GPIO_WritePin(TTP229_SCL_PORT, TTP229_SCL_PIN, GPIO_PIN_RESET);
	TTP229_Delay();
}

uint16_t TTP229_ReadData(void) {
    uint16_t data = 0;

    TTP229_Start();

    // Read 16 bits of data
    for(uint8_t i = 0; i < 16; i++) {
        HAL_GPIO_WritePin(TTP229_SCL_PORT, TTP229_SCL_PIN, GPIO_PIN_SET);
        TTP229_Delay();

        // Read data bit
        if(HAL_GPIO_ReadPin(TTP229_SDO_PORT, TTP229_SDO_PIN)) {
            data |= (1 << (15 - i));
        }

        HAL_GPIO_WritePin(TTP229_SCL_PORT, TTP229_SCL_PIN, GPIO_PIN_RESET);
        TTP229_Delay();
    }

    return data;
}

int8_t TTP229_GetKeyPressed(uint16_t data) {
    if(data == 0) return -1; // No key pressed

    for(uint8_t i = 0; i < 16; i++) {
        if(data & TTP229_KEYS[i]) {
            return i;
        }
    }

    return -1; // No valid key found
}
uint16_t keyData;
int8_t keyIndex;

